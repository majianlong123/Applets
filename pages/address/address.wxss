.container {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -ms-flex-direction: column;
  flex-direction: column;
}

.group {
  padding-bottom: 120rpx;
}

.table {
  margin: 30rpx 40rpx;
  background-color: white;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  -webkit-box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.06);
  box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.06);
}

.address {
  padding: 20rpx 0rpx;
  font-size: 26rpx;
  color: #acacac;
  padding-bottom: 20rpx;
  border-bottom: #f5f5f5 1rpx solid;
}

.address > span {
  margin-left: 15rpx;
}

.icon > van-icon {
  margin-left: 30rpx;
}

.infeed {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  font-size: 28rpx;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
}

.floor {
  text-align: right;
  margin-top: 20rpx;
}

.footer {
  position: fixed;
  bottom: 40rpx;
  padding: 0 80rpx;
  width: 100%;
  box-sizing: border-box;
}
.footer .van-button {
  width: 100%;
}
