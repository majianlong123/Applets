page {
  background: #f5f5f5;
}
.content {
  display: flex;
  padding: 20rpx;
  align-items: center;
  box-sizing: border-box;
  margin: 30rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0px 1px 4px 0px rgba(192, 192, 192, 0.55);
  background: #fff;
}

.img {
  width: 150rpx;
  height: 150rpx;
  margin-right: 40rpx;
}

.box_content {
  display: flex;
  flex: 1;
  margin-right: 40rpx;
  flex-direction: column;
  font-size: 24rpx;
  overflow: hidden;
  justify-content: space-between;
}

.box_content .tit {
  font-size: 30rpx;
  line-height: 45rpx;
  color: #666;
}

.box_content .time {
  font-size: 24rpx;
  line-height: 45rpx;
  color: #999;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}
