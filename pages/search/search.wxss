.menu {
  margin: 0 40rpx;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.menu .menu_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}
.menu .menu_title .small {
  font-size: 24rpx;
}
.menu > view {
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  flex-wrap: wrap;
}
.menu .menu_item {
  border-radius: 20rpx;
  background: #f5f5f5;
  color: #666;
  padding: 10rpx 20rpx;
  margin: 20rpx;
  font-size: 24rpx;
}
.noSearch {
  margin: 30rpx 40rpx;
  font-size: 24rpx;
  color: #666;
}
