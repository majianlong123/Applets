.table {
  margin-top: 15rpx;
  background-color: white;
}

.input {
  display: flex;
  flex: 1;
  align-items: center;
  box-sizing: border-box;
  background-color: white;
  padding: 30rpx 30rpx;
  /* margin: 0 30rpx; */
  font-size: 28rpx;
  color: #333;
  border-bottom: #f5f5f5 1rpx solid;
}

.input > span {
  max-width: 180rpx;
  min-width: 180rpx;
}

.input > input {
  width: calc(100% - 210rpx);
}
.gpsbtn {
  height: auto;
  line-height: normal;
  font-size: 28rpx;
  margin: 0;
  background: white;
  width: calc(100% - 210rpx);
  text-align: left;
  padding: 0;
}
.gpsbtn::after {
  border: 0;
}
.footer {
  position: fixed;
  bottom: 40rpx;
  padding: 0 80rpx;
  width: 100%;
  box-sizing: border-box;
}
.footer .van-button {
  width: 100%;
}
