.tablist {
  position: fixed;
  top: 0;
  width: 100%;
  box-shadow: -5rpx 5rpx 10rpx #f5f5f5;
}

.tablist .tab {
  background: white;
}

.tab {
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  width: 100%;
}

.tab_item {
  margin-right: 50rpx;
  display: flex;
  align-items: center;
}

.tab_item van-icon {
  color: #999999;
}

.tab_item text {
  margin-right: 15rpx;
  color: #999999;
}

.tab_item-sel van-icon {
  color: #f98350;
}

.tab_item-sel text {
  color: #f98350;
}

.tab_item-right {
  margin-left: auto;
  margin-right: 0;
}

.block {
  margin-top: 100rpx;
  display: flex;
  padding: 20rpx 35rpx;
  flex-wrap: wrap;
  justify-content: space-between;
}

.block_item {
  display: flex;
  flex-direction: column;
  width: 320rpx;
  margin: 10rpx 10rpx;
  box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.06);
  border-radius: 15rpx;
  height: 420rpx;
}

.block_item:last-child {
  border: 0;
}

.block_item image {
  width: 100%;
  height: 280rpx;
  border-radius: 10rpx;
}

.block_item .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
}

.block_item .content_title {
  font-size: 28rpx;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  letter-spacing: 1rpx;
}

.block_item .content_money {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
}

.block_item .content_money-red {
  color: #ff3f3f;
}

.block_item .content_money-red::first-letter {
  font-size: 24rpx;
}

.block_item .content_money text {
  font-size: 24rpx;
  color: #999;
}

.screen {
  display: flex;
  margin: 30rpx;
  flex-wrap: wrap;
}

.screen .title {
  font-size: 30rpx;
  width: 100%;
  padding-bottom: 15rpx;
}

.screen_item {
  margin: 15rpx;
  background: #eee;
  font-size: 26rpx;
  padding: 5rpx 20rpx;
  color: #666;
  border-radius: 30rpx;
}

.screen_item-sel {
  background: #f98350;
  color: white;
}

.tab-class {
  color: #f98350 !important;
}
